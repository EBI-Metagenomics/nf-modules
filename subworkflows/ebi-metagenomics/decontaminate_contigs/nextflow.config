params {
    // Set default values for alignment filtering
    min_qcov      = 0.5
    min_mapq      = 20
    min_align_len = 10000
}

process {
    withName: MINIMAP2_ALIGN {
        ext.args = "-x asm5"
    }

    withName: SEQKIT_GREP {
        ext.args   = "--invert-match"
        // defining the prefix is necessary to avoid "same filename error"
        ext.prefix = { "${meta.id}_cleaned" }
    }
}