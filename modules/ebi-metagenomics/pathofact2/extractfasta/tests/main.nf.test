        when {
            process {
                """
                input[0] = [
                    [id:'test'],
                    file("${moduleDir}/tests/data/test_protein.faa.gz", checkIfExists: true),
                    file("${moduleDir}/tests/data/test_diamond_vfdb_empty.txt.gz", checkIfExists: true),
                    file("${moduleDir}/tests/data/test_toxins_empty.tsv.gz", checkIfExists: true),
                    file("${moduleDir}/tests/data/test_virulence_empty.tsv.gz", checkIfExists: true),
