                    file("${moduleDir}/tests/data/test_classifier_toxins_filtered.tsv.gz", checkIfExists: true),
                    file("${moduleDir}/tests/data/test_classifier_virulence_filtered.tsv.gz", checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.fasta).match("fasta_file_stub") },
                { assert snapshot(process.out.tsv).match("tsv_file_stub") },
                { assert snapshot(process.out.versions_python).match("versions_stub") }
            )
        }

    }

