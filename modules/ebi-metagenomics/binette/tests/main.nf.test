nextflow_process {

    name "Test Process BINETTE"
    tag "modules_ebimetagenomics"
    tag "modules"
    tag "binette"
    script "../main.nf"
    process "BINETTE"


    test("Should refine bins from FASTA input directories") {
        when {
            params {
                outdir = "${launchDir}/tests/results"
            }
            process {
                """
                input[0] = [
                    [id: 'test'],
                    [
                        file('$moduleDir/tests/data/binner1', checkIfExists: true),
                        file('$moduleDir/tests/data/binner2', checkIfExists: true)
                    ],
                    file('$moduleDir/tests/data/metagenome.fasta', checkIfExists: true),
                    []
                ]
                input[1] = "fasta"
                input[2] = file('$moduleDir/tests/data/small_db.dmnd', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                {
                    assert snapshot(
                        process.out.refined_bins,
                        process.out.refined_bins_report,
                        process.out.versions,
                        path(process.out.versions[0]).yaml
                    ).match()
                }
            )
        }
    }


